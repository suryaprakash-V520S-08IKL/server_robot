<?xml version="1.0" ?>
<sdf version="1.6">
  <world name="butler_cafe">
    
    <!-- Ground Plane -->
    <include>
      <uri>model://ground_plane</uri>
      <static>true</static>
    </include>

    <!-- Kitchen -->
    <model name="kitchen">
      <static>true</static>
      <pose>2 0 0 0 0 0</pose>
      <link name="body">
        <visual name="visual">
          <geometry><box><size>1 1 0.5</size></box></geometry>
          <material><ambient>0.7 0.2 0.2 1</ambient></material>
        </visual>
        <collision name="collision">
          <geometry><box><size>1 1 0.5</size></box></geometry>
        </collision>
      </link>
    </model>

    <!-- Tables -->
    <model name="table1">
      <static>true</static>
      <pose>3 1 0 0 0 0</pose>
      <link name="body">
        <visual name="visual">
          <geometry><cylinder><radius>0.2</radius><length>0.4</length></cylinder></geometry>
          <material><ambient>0.6 0.4 0.2 1</ambient></material>
        </visual>
        <collision name="collision">
          <geometry><cylinder><radius>0.2</radius><length>0.4</length></cylinder></geometry>
        </collision>
      </link>
    </model>

    <model name="table2">
      <static>true</static>
      <pose>3 -1 0 0 0 0</pose>
      <link name="body">
        <visual name="visual">
          <geometry><cylinder><radius>0.2</radius><length>0.4</length></cylinder></geometry>
          <material><ambient>0.6 0.4 0.2 1</ambient></material>
        </visual>
        <collision name="collision">
          <geometry><cylinder><radius>0.2</radius><length>0.4</length></cylinder></geometry>
        </collision>
      </link>
    </model>

    <model name="table3">
      <static>true</static>
      <pose>4 0 0 0 0 0</pose>
      <link name="body">
        <visual name="visual">
          <geometry><cylinder><radius>0.2</radius><length>0.4</length></cylinder></geometry>
          <material><ambient>0.6 0.4 0.2 1</ambient></material>
        </visual>
        <collision name="collision">
          <geometry><cylinder><radius>0.2</radius><length>0.4</length></cylinder></geometry>
        </collision>
      </link>
    </model>

    <!-- Robot -->
    <include>
      <uri>model://turtlebot3_burger</uri>
      <pose>-1 0 0 0 0 0</pose> <!-- Moved slightly away from the kitchen -->
    </include>

  </world>
</sdf>

